[include]
path = ~/.gitconfig.local

[pager]
    diff = delta --diff-so-fancy
    log = delta --diff-so-fancy
    reflog = delta --diff-so-fancy
    show = delta --diff-so-fancy

[difftool]
prompt = false
[push]
default = nothing
followTags = true
[filter "lfs"]
smudge = git-lfs smudge %f
required = true
clean = git-lfs clean %f
[credential]
helper = osxkeychain
[core]
excludesfile = /home/mick/.gitignore_global
pager = less -r
[remote "origin"]
fetch = +refs/pull/*/head:refs/remotes/origin/pr/*
[alias]
bb = repo bb
a = commit --amend
hub = repo hub
lab = repo gitlab
glog = log --pretty=format:'%Cred%ad%Creset %h %s %Cblue(%an)%Cgreen%d' --date=iso
prune = fetch --prune
undo = reset --soft HEAD^
stash-all = stash save --include-untracked
c = "commit"
f = "!git ls-files -m -o --exclude-standard | fzf --print0 -m | xargs -0 -t -o git add"
[mergetool "fugitive"]
cmd = vim -f -c \"Gdiff\" \"$MERGED\"
[mergetool "vimdiff"]
cmd = vimdiff
[merge]
	tool = vimdiff3
ff = only
[color]
ui = true
[status]
showUntrackedFiles = all
[commit]
gpgsign = true
verbose = true
[gpg]
program = /usr/bin/gpg
[mergetool "diffconflicts"]
cmd = diffconflicts vim $BASE $LOCAL $REMOTE $MERGED
trustExitCode = true
[mergetool]
keepBackup = false
[mergetool "vimdiff3"]
	cmd = vim -f -d -c \"wincmd J\" \"$MERGED\" \"$LOCAL\" \"$BASE\" \"$REMOTE\"
[color "diff"]
	meta = "bold"
	old = "bold red"
	new = "bold green"
